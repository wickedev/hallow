{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "es2020": true
  },
  "ignorePatterns": ["dist", ".eslintrc.cjs"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}